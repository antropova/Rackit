<div class="row">
  <div class="col-md-4">
    <h1 class="page-header"><%= @user.name %></h1>
    <%= image_tag @user.image_url, class: "img-circle img-responsive", width: "100px", height: "50" %><br>
    <p><%= @user.email %></p><br>
    <p><%= @user.location %></p><br>
    <p><%= @user.bio%></p><br>
    Current Location: <strong><%= location_data %></strong>
  </div>
  <div class="col-md-8">
    <table class="table table-hover table-responsive">
      <thead>
        <tr>
          <th>Location</th>
          <th>Racks</th>
          <th>Borough</th>
          <th>Latitude</th>
          <th>Longitude</th>
        </tr>
      </thead>
      <tbody>
        <% @corrals.each do |corral| %>
          <tr>
            <td><%= corral.location %></td>
            <%= rack_colors(corral) %>
            <td><%= corral.borough.name %></td>
            <td><%= corral.latitude %></td>
            <td><%= corral.longitude %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="col-md-12">
  <div id="map" style='width: 100%; height: 45em;'></div>
</div>
