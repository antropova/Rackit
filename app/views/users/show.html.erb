<div class="row">

<div class="col-md-4">
  <h1 class="page-header"><%= @user.name %></h1>
  <%= image_tag @user.image_url, class: "img-circle", style: "width:100px" %>
  <br>
  <dl class="dl-horizontal">
    <dt>Email:</dt>
    <dd><%= @user.email %></p><br></dd>
    <dt>Resides:</dt>
    <dd><%= @user.location %></dd>
    <dt>Bio:</dt>
    <dd><%= @user.bio%></dd>
    <dt>Current Location:</dt>
    <dd><strong><%= @user.current_location %></strong></dd>
  </dl>
  <% if current_user == @user %>
    <%= link_to 'Edit Profile', edit_user_path(@user.id), class: "btn btn-primary" %>
  <% end %>
</div>
<% if current_user == @user %>
  <div class="col-md-8">
    <div id="map" style='width: 100%; height: 40em;'></div>
  </div>
<% end %>



 <div class="col-md-12">
   <table class="table table-hover table-responsive">
     <thead>
       <tr>

         <th>Location</th>
         <th>Racks</th>
         <th>Borough</th>
         <th>Latitude</th>
         <th>Longitude</th>
       </tr>
     </thead>
     <tbody>
       <% @corrals_to_view.each do |corral| %>
         <tr>
           <td><%= corral.location %></td>
           <%= rack_colors(corral) %>
           <td><%= corral.borough.name %></td>
           <td><%= corral.latitude %></td>
           <td><%= corral.longitude %></td>
           <% if corral.location != current_user.location %>
           <td><%= link_to "Checkin!", corral_checkins_path(corral.id) %></td>
           <% else %>
           <td><%= link_to "Checkout", corral_checkouts_path(corral.id) %></td>
           <% end %>
         </tr>
       <% end %>
     </tbody>
   </table>
 <%= will_paginate @corrals_to_view, previous_label: h("<"), next_label: h(">") %>
</div>

<div class="row">
  <div class="col-xs-6">
    <h3>Check Crime Rates</h3>
<iframe src="https://www.google.com/maps/d/embed?mid=zRUgBYjYj9Xg.ktXuyK8qNrjs" width="640" height="480"></iframe>
  </div>
</div>


<div class="col-md-12">
 <table class="table table-hover table-responsive">
   <thead>
     <tr>
       <h3>Attractions near you</h3>
     </tr>
   </thead>
   <tbody>
     <% @spots.each do |spot| %>
       <% present spot do |spot_presenter| %>
         <tr>
           <td><%= spot_presenter.image_url %></td>
           <td><h3><%= spot_presenter.name %></h3></td>
           <td><strong><%= spot_presenter.attraction_types %></strong>
           <strong><%= spot_presenter.attraction_status %></strong>
           <strong><%= spot_presenter.attraction_price %></strong>
           Rating: <%= spot_presenter.attraction_rating %></td>
           <td>
             <%= form_tag directions_path, method: :get %>
              <%= hidden_field_tag :vicinity, spot.vicinity %>
              <%= submit_tag "Get Directions", class: "btn btn-primary" %>
           </td>
         </tr>
       <% end %>
     <% end %>
   </tbody>
 </table>

