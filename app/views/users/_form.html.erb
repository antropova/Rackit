<%= form_for(@user, class: "form-horizontal") do |f| %>

  <div class="field">
    <%= f.hidden_field :provider, value: @user.provider %>
    <%= f.hidden_field :uid, value: @user.uid %>
  </div>

  <div class="form-group">
    <div class="field">
      <br><%= f.label :name, "Name", class: "control-label" %>
      <br><%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="field">
      <br><%= f.label :email, "Email", class: "control-label" %>
      <br><%= f.text_field :email, class: "form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <div class="field">
      <br><%= f.label :image_url, "Image", class: "control-label" %>
      <br><%= f.text_field :image_url, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="field">
      <br><%= f.label :bio, "Bio", class: "control-label" %>
  		<br><%= f.text_field :bio, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="field">
      <br><%= f.label :location, "Location", class: "control-label" %>
      <br><%= f.select :location, User.location, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="action">
      <%= f.submit "Submit", class: "btn btn-primary" %>
    </div>
  </div>
<% end %><br />